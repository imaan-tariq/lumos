<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="spt.lumos">

    //android.hardware.camera2 is the primary API for controlling device cameras
    <uses-feature android:name="android.hardware.camera2" android:required="true"/>

    // permission to use the storage
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    // permission to use a device camera
    <uses-permission android:name="android.permission.CAMERA"/>
    // permission for audio capture permission
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".VidRecordingActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>